<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:gravity="left|top"

        android:textColor="#090808"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <TextView
        android:id="@+id/res"
        android:layout_width="229dp"
        android:layout_height="0dp"
        android:gravity="bottom|right"
        android:textColor="@color/res_bg"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="@id/input"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintRight_toRightOf="@id/input" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_row"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"

        >

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/btn_clr"
            android:onClick="onDigitClick"
            android:text="7"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:onClick="onDigitClick"
            android:text="8"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_7"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:onClick="onDigitClick"
            android:text="9"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_8"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#CECFD1"
            android:text="+"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_9"
            app:layout_constraintWidth_percent="0.2"
            android:onClick="onOperatorClick"
            />

        <Button
            android:id="@+id/btn_pow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#F2F7F8"
            android:onClick="onOperatorClick"
            android:text="pow"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn_plus"
            app:layout_constraintWidth_percent="0.2" />




        />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sec_row"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/first_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"

        >

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:onClick="onDigitClick"
            android:text="4"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:onClick="onDigitClick"
            android:text="5"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_4"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:onClick="onDigitClick"
            android:text="6"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_5"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#CECFD1"
            android:onClick="onOperatorClick"
            android:text="-"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_6"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#F2F7F8"
            android:onClick="onDigitClick"
            android:text="-"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn_minus"
            app:layout_constraintWidth_percent="0.2" />


        />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/third_row"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sec_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"

        >

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:onClick="onDigitClick"
            android:text="1"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:onClick="onDigitClick"
            android:text="2"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_1"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:onClick="onDigitClick"
            android:text="3"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_2"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_multy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#CECFD1"
            android:onClick="onOperatorClick"
            android:text="*"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_3"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#F2F7F8"
            android:text="AC"
            android:onClick="onClearClick"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btn_multy"
            app:layout_constraintWidth_percent="0.2" />


        />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fourth_row"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/third_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"

        >

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:onClick="onDotClick"
            android:text="."
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:onClick="onDigitClick"
            android:text="0"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_dot"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/btn_equale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#14CA9C"
            android:text="="
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_0"
            app:layout_constraintWidth_percent="0.2"
            android:onClick="onEqualeclick"
            />

        <Button
            android:id="@+id/btn_divid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#CECFD1"
            android:onClick="onOperatorClick"
            android:text="/"
            android:textSize="26sp"
            app:layout_constraintStart_toEndOf="@id/btn_equale"
            app:layout_constraintWidth_percent="0.2" />

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#F2F7F8"
            android:text="del"
            android:textSize="20sp"
            android:onClick="onDelClick"
            app:layout_constraintStart_toEndOf="@id/btn_divid"
            app:layout_constraintWidth_percent="0.2" />

        />
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>